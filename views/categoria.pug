                        label(for="categoria") Nombre
                        input#categoriaM.form-control.disable(type="text" name="categoria" required="required")
                    .form-group.mb-3
                        label(for="descripcionCategoria") Descripci贸n
                        input#descripcionM.form-control.disable(type="text" name="descripcionCategoria" required="required")
                    button.btn.btn-success(type='submit') Actualizar
                    a.m-2.btn.btn-danger(href="/categoria") Cancelar
                .form-group.mb-3.col-8 
                    table.table.table-striped.table-hover
                        thead
                            tr
                            th(scope='col') #
                            th(scope='col') Nombre
                            th(scope='col') Descripci贸n
                            th(scope='col') Opciones
                        tbody.tbody-info 
                            if (datos)
                                each c in datos
                                    tr
                                        td #{c.idCategoria}
                                        td #{c.categoria}
                                        td #{c.descripcionCategoria}
                                        td
                                            a.m-2.btn.btn-md.btn-success(href="javascript:editar(" + "'" + c.idCategoria + "'" + "," + "'" + c.categoria + "'" + "," + "'" + c.descripcionCategoria + "'" + ")") Editar
